<%= simple_form_for([@post, @post.comments.build]) do |f| %>
<%# need to pass the post and the related post comments %>
<%# build won't "create" a record in database, just create a new object in memory so that the view can take this object and display something, especially for a form.%>
  <div class="field">
    <div class="control">
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <%= f.button :submit, class: 'button is-primary' %>
<% end %>

