<% content_for :page_title, 'Create a new Post' %>

<div class="section">
  <%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <!--first part references the table record, class input for bulma input, wrapper false for simpletable or will clash with bulma, class label for bulma label-->
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
    <div class="field">
      <div class="control">
        <%= f.input :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <%= f.button :submit, 'Create new post', class: 'button is-primary' %>
    <% end %>
</div>